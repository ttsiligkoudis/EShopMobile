<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:EShopMobile"
             xmlns:pages="clr-namespace:EShopMobile.Pages"
             xmlns:shell="clr-namespace:Microsoft.Maui.Controls;assembly=Microsoft.Maui.Controls"
             x:Class="EShopMobile.App">
    <Application.Resources>
        <Style x:Key="EntryIsEnabled" TargetType="Entry">
            <Style.Triggers>
                <Trigger TargetType="Entry" Property="IsEnabled" Value="True">
                    <Setter Property="BackgroundColor" Value="White" />
                </Trigger>
                <Trigger TargetType="Entry" Property="IsEnabled" Value="False">
                    <Setter Property="BackgroundColor" Value="#e9ecef" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <ResourceDictionary>
            <Color x:Key="BackgroundColor">#f1f1f1</Color>
            <Color x:Key="LightGrey">#e9e9e9</Color>
            <Color x:Key="PrimaryColor">#2B2B2B</Color>
            <Color x:Key="SecondaryColor">White</Color>
            <Color x:Key="BtnBackground">#007AFF</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>
